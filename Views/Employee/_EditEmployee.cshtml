@model EmployeeViewModel



    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title 1</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="EditEmployeeFom"
                  asp-controller="Employee"
                  asp-action="EditEmployee"
                  data-ajax-success="EmployeeSave"
                  data-ajax-update="#EmployeeList"
                  method="post"
                  data-ajax="true">
                <div class="modal-body">


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" class="form-control " asp-for="@Model.EmployeeId" />


                    <div class="row px-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="@Model.EmployeeName" class="mb-2 text-dark"></label>
                            <input class="form-control " asp-for="@Model.EmployeeName" />
                            <small>
                                <span asp-validation-for="@Model.EmployeeName" class="text-danger"></span>
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="@Model.PhoneNumber" class="mb-2 text-dark"></label>
                            <input class="form-control " asp-for="@Model.PhoneNumber" />
                            <small>
                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                            </small>
                        </div>
                    </div>
                    <div class="row px-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="@Model.SkillId" class="mb-2"></label>
                            <input class="form-control " asp-for="@Model.SkillId" />
                            <small>
                                <span asp-validation-for="@Model.SkillId" class="text-danger"></span>
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="@Model.YearsExperience" class="mb-2"></label>
                            <input class="form-control " asp-for="@Model.YearsExperience" />
                            <small>
                                <span asp-validation-for="@Model.YearsExperience" class="text-danger"></span>
                            </small>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="button"hidden class="btn btn-dark reset" value="Reset" />
                    <input type="submit" class="btn btn-primary" value="Save" />

                </div>
            </form>
        </div>
    </div>

<script>

    $("#EditEmployeeFom").submit(function () {
        //debugger;
        var empid = $("#EmployeeId").val()
        if (empid > 0) {
            var result = IsFormValid(EmployeeClassFields);
            if (!result) {
                return false
            }
        }
        return true;
    });
</script>
